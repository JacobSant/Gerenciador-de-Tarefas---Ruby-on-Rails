<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @user_backoffice_task %>

    <div class="grid grid-cols-3 gap-4">
      <%= link_to "Editar tarefa", edit_user_backoffice_task_path(@user_backoffice_task), class: "text-center mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium w-full" %>
      <%= link_to "Voltar", user_backoffice_tasks_path, class: "text-center mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium w-full"  %>
      <%= button_to "Excluir tarefa", @user_backoffice_task, method: :delete, class: "text-center mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium w-full"  %>
  </div>
  </div>
</div>
